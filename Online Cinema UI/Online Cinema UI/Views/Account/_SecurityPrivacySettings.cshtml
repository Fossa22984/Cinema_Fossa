            <label class="control-label text-white">Изменить Пароль</label>
            <input type="text" class="form-control text-white" style="background-color: #464649; border: none" required />

        </div>

        <div class="form-group" style="width: 25vw">
            <label class="control-label text-white">Двухфакторная аутентификация</label>
            @*<input type="checkbox" class="form-control text-white" style="background-color: #464649; border: none" required />*@

        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-outline-secondary clickOnButton" value="Сохранить изменения" />
        </div>
    </form>
</div>