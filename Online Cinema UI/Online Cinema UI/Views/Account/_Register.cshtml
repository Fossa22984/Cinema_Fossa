@model Online_Cinema_UI.Models.RegisterViewModel

<form asp-action="Register" enctype="multipart/form-data" style="padding:10px">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username" class="control-label text-white"></label>
        <input asp-for="Username" class="form-control text-white" style="background-color: #464649; border: none" required />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label text-white"></label>

        <div class="form-group">
            <input id="password" asp-for="Password" type="password" class="form-control text-white" style="background-color: #464649; border: none" required />
            <span onclick="ShowPassword(this)" class="fas fa-eye field-icon"></span>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label text-white"></label>

        <div class="form-group">
            <input id="confirmPassword" asp-for="ConfirmPassword" type="password" class="form-control text-white" style="background-color: #464649; border: none" required />
            <span onclick="ShowConfirmPassword(this)" class="fas fa-eye field-icon"></span>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Birthday" class="control-label text-white"></label>
        <input asp-for="Birthday" type="date" class="form-control text-white" style="background-color: #464649; border: none" required />
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label text-white"></label>
        <input asp-for="Email" type="email" class="form-control text-white" style="background-color: #464649; border: none" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-dark mt-4" value="Login In" style="background-color: #3eaaaf; width:100%" />
    </div>
</form>

<script>
    function ShowPassword(e) {


        if ($("#password").attr("type") === "password") {
            $(e).attr("class", "fas fa-eye-slash field-icon");
            $("#password").attr("type", "text");
        } else {
            $(e).attr("class", "fas fa-eye field-icon");
            $("#password").attr("type", "password");
        }
    }

    function ShowConfirmPassword(e) {
        if ($("#confirmPassword").attr("type") === "password") {
            $(e).attr("class", "fas fa-eye-slash field-icon");
            $("#confirmPassword").attr("type", "text");
        } else {
            $(e).attr("class", "fas fa-eye field-icon");
            $("#confirmPassword").attr("type", "password");
        }
    }
</script>

<style>
    .field-icon {
        float: right;
        color: white;
        margin-right: 10px;
        margin-top: -25px;
        position: relative;
        z-index: 2;
    }

    input:focus {
        outline: none !important;
        border: 2px solid #3eaaaf !important;
        box-shadow: 0 0 10px #3eaaaf;
    }
</style>