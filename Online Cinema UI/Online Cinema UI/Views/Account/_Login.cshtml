@model Online_Cinema_UI.Models.LoginViewModel

<form asp-action="Login" style="padding:10px">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Login" class="control-label text-white"></label>
        <input asp-for="Login"  type="text" class="form-control text-white" style="background-color: #464649; border: none" required />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label text-white"></label>

        <div class="form-group">
            <input id="password" asp-for="Password" type="password" class="form-control text-white" style="background-color: #464649; border: none" required />
            <span onclick="ShowLoginPassword(this)" class="fas fa-eye field-icon" style="z-index:0"></span>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    @*<div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
            </label>
        </div>*@
    <div class="form-group">
        <input type="submit" class="btn btn-dark mt-4" value="Login In" style="background-color: #3eaaaf; width:100%" />
    </div>
</form>

<script>
    function ShowLoginPassword(e) {


        if ($("#password").attr("type") === "password") {
            $(e).attr("class", "fas fa-eye-slash field-icon");
            $("#password").attr("type", "text");
        } else {
            $(e).attr("class", "fas fa-eye field-icon");
            $("#password").attr("type", "password");
        }
    }
</script>

<style>
    .field-icon {
        float: right;
        color: white;
        margin-right: 10px;
        margin-top: -25px;
        position: relative;
        z-index: 2;
    }

    input:focus {
        outline: none !important;
        border: 2px solid #3eaaaf !important;
        box-shadow: 0 0 10px #3eaaaf;
    }
</style>