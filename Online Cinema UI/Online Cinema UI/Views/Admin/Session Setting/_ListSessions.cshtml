@model IList<Online_Cinema_Models.View.SessionViewModel>
@if (Model != null)
{
    <div class="d-flex flex-row bd-highlight mb-3 flex-wrap" id="flux">
        <table class="table table-bordered text-white">
            <thead>
                <tr class="text-center">
                    <th scope="col">#</th>
                    <th scope="col">Movie Title (#Id)</th>
                    <th  scope="col">Start</th>
                    <th scope="col">End</th>
                    <th scope="col">Is Removed</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.Id</td>
                        <td>@item.Movie.MovieTitle (#@item.Movie.Id)</td>
                        <td class="StartTd" >@item.Start.ToString("dd.MM.yyyy HH:mm") (UTC)</td>
                        <td class="EndTd" >@item.End.ToString("dd.MM.yyyy HH:mm") (UTC)</td>
                        <td>@item.IsRemoved</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

    <script src="~/js/movie/session-list.js"></script>